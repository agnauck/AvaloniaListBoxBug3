<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\*" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Assets\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="11.1.999-cibuild0044112-beta" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="11.1.999-cibuild0044112-beta" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.1.999-cibuild0044112-beta" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" Version="11.0.6" />
  </ItemGroup>
</Project>
